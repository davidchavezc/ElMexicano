  <body>
    <div class="container">
      <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a href="/logOut" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
          <span class="fs-4 wordmark">Autopartes <strong>El Mexicano</strong></span>
          <span class="fs-5 ms-2">Empleados</span>
        </a>
        <ul class="nav nav-pills">
          <li class="nav-item"><a href="/restock" class="nav-link">Restock</a></li>
          <li class="nav-item"><a href="/venta" class="nav-link active" aria-current="page">Venta</a></li>
          <li class="nav-item"><a href="/logOut" class="nav-link">Cerrar sesión</a></li>
        </ul>
      </header>
  </div>
    
  <div class="container-fluid">
    <div class="container bg-light border rounded p-3 mt-3">
      <div class="d-flex justify-content-between align-items-center">
        <h5 class="fw-bold">Registro de venta</h5>
        <div class="position-relative w-25">
          <input type="text" class="form-control" id="buscador-pieza" placeholder="Buscar producto">
          <div id="resultados" class="position-absolute w-100"></div>
        </div>
      </div>
    </div>
  
    <div id="pieza-seleccionada" class="container"></div>
  </div>
    <div class="container bg-white border rounded p-3 mt-3">
        <div class="row text-center">
            <div class="col-md-4">
                <label class="fw-bold">Nombre del Cliente</label>
                <input type="text" class="form-control bg-light p-2 rounded" placeholder="Nombre del Cliente">
            </div>
            <div class="col-md-4">
                <label class="fw-bold">Fecha</label>
                <input type="date" class="form-control bg-light ">
            </div>
            <div class="col-md-4">
                <label class="fw-bold">Método de pago</label>
                <select class="form-select" id="selectMetodoPago"></select>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-3">
                <button class="btn btn-dark">Cancelar</button>
                <button class="btn btn-primary">Registrar</button>
            </div>
        </div>
        </div>
        <div id="alertBox" class="container"></div>
        <div class="container">
          <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <p class="col-md-4 mb-0 text-body-secondary">&copy; 2025 Autopartes El Mexicano S.A. de C.V.</p>
            <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
              <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
            </a>
            <ul class="nav col-md-4 justify-content-end">
            </ul>
          </footer>
        </div> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="/scripts/jquery-3.7.1.min.js"></script>
    <script src="/scripts/venta.js"></script>
