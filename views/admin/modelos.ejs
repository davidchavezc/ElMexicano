<html lang="es-MX">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modelos - Autopartes El Mexicano</title>
  <link rel="stylesheet" href="../assets/styles/landingPage.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wdth,wght@0,75,300..800;1,75,300..800&display=swap"
    rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <span class="fs-4 wordmark">Autopartes <strong>El Mexicano</strong></span>
        <span class="fs-5 ms-2">Administrador</span>
      </a>
      <ul class="nav nav-pills">
        <li class="nav-item"><a href="/admin/empleados" class="nav-link ">Empleados</a></li>
        <li class="nav-item"><a href="/admin/historial" class="nav-link">Historial de venta</a></li>
        <li class="nav-item"><a href="/admin/piezas" class="nav-link">Piezas</a></li>
        <li class="nav-item"><a href="/admin/marcas" class="nav-link">Marcas</a></li>
        <li class="nav-item"><a href="/admin/modelos" class="nav-link active" aria-current="page">Modelo</a></li>
        <li class="nav-item"><a href="/admin/reporte" class="nav-link">Reporte</a></li>
        <li class="nav-item"><a href="/logOut" class="nav-link">Cerrar sesión</a></li>
      </ul>
    </header>
  </div>

  <!-- Main Container -->

   <!-- Agregar Modelo -->
  <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 600px;">
      <h4 class="fw-bold text-center mb-4">Gestión de Modelos</h4>
      <!-- Añadir Modelo-->
      <div class="mb-4">
        <h5 class="fw-bold">Añadir Modelo</h5>
        <div class="mb-3">
          <label class="fw-bold">Nombre de Modelo</label>
          <input type="text" id="nombre_modelo" class="form-control" placeholder="Ingrese el nombre del modelo">
          <label class="fw-bold mt-2">Año de Modelo</label>
          <input type="number" id="anio_modelo" class="form-control" placeholder="Ingrese el año del modelo">
          <label class="fw-bold mt-2">Marca de Modelo</label>
          <div class="position-relative">
            <input type="text" id="buscar_marca_crear" class="form-control" placeholder="Buscar marca...">
            <div id="lista_marcas_crear" class="position-absolute w-100 bg-white shadow-sm rounded d-none" style="max-height: 200px; overflow-y: auto; z-index: 1000;"></div>
            <input type="hidden" id="id_marca" value="">
          </div>
        </div>
        <div class="d-flex gap-2">
          <button class="btn btn-success" id="btnCrearModelo">Crear</button>
          <button class="btn btn-danger" id="btnCancelarModelo">Cancelar</button>
        </div>
      </div>
      <!-- Eliminar Modelo - Sección modificada -->
      <div class="mb-4">
        <h5 class="fw-bold">Eliminar Modelo</h5>
        <div class="mb-3">
          <label class="fw-bold">Marca de Modelo</label>
          <div class="position-relative mb-3">
            <input type="text" id="buscar_marca_eliminar" class="form-control" placeholder="Buscar marca...">
            <div id="lista_marcas_eliminar" class="position-absolute w-100 bg-white shadow-sm rounded d-none" style="max-height: 200px; overflow-y: auto; z-index: 1000;"></div>
            <input type="hidden" id="marca_eliminar" value="">
          </div>
          <label class="fw-bold">Año del Modelo (opcional)</label>
          <input type="number" id="anio_eliminar" class="form-control mb-3" placeholder="Filtrar por año">
          <label class="fw-bold">Modelo a Eliminar</label>
          <select id="modelo_eliminar" class="form-select"></select>
        </div>
        <div class="d-flex gap-2">
          <button class="btn btn-danger" id="btnEliminarModelo">Eliminar</button>
          <button class="btn btn-secondary" id="btnCancelarEliminar">Cancelar</button>
        </div>
      </div>
      <!-- Seleccionar Modelo - Sección modificada -->
      <div>
        <h5 class="fw-bold">Modelos</h5>
        <div class="mb-3">
          <label class="fw-bold">Marca de Modelo</label>
          <div class="position-relative mb-3">
            <input type="text" id="buscar_marca_filtro" class="form-control" placeholder="Buscar marca...">
            <div id="lista_marcas_filtro" class="position-absolute w-100 bg-white shadow-sm rounded d-none" style="max-height: 200px; overflow-y: auto; z-index: 1000;"></div>
            <input type="hidden" id="marca_filtro" value="">
          </div>
          <label class="fw-bold">Año del Modelo (opcional)</label>
          <input type="number" id="anio_filtro" class="form-control mb-3" placeholder="Filtrar por año">
          <select class="form-select" id="lista_modelo">
            <option selected>Selecciona un modelo</option>
          </select>
        </div>
      </div>

  <!-- Footer -->
  <div class="container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
      <p class="col-md-4 mb-0 text-body-secondary">© 2025 Autopartes El Mexicano</p>
      <a href="/"
        class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
        <svg class="bi me-2" width="40" height="32">
          <use xlink:href="#bootstrap" />
        </svg>
      </a>
      <ul class="nav col-md-4 justify-content-end">
        <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Principal</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Catálogo</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Contáctanos</a></li>
        <li class="nav-item"><a href="#" class="nav-link px-2 text-body-secondary">Nosotros</a></li>
      </ul>
    </footer>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <script src="/scripts/jquery-3.7.1.min.js"></script>
  <script src="/scripts/modelo.js"></script>
</body>

</html>