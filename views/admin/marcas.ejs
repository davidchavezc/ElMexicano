        </ul>
      </header>
    </div>
    <main class="container">
      <div class="mt-4">
        <!-- Listado de Marcas -->
        <div class="mt-3">
          <h5 class="fw-bold mt-3">Listado Marcas</h5>
        <table class="table table-bordered">
          <thead class="table-light">
            <tr>
              <th class="col-2">ID</th>
              <th class="col-10">Nombre</th>
            </tr>
          </thead>
          <tbody id="marcas-tbody"></tbody>
        </table>
      </div>
      <!-- Listado de Categorías -->
      <div class="mt-3">
        <h5 class="fw-bold mt-3">Listado Categorías</h5>
        <table class="table table-bordered">
          <thead class="table-light">
            <tr>
              <th class="col-2">ID</th>
              <th class="col-10">Nombre</th>
            </tr>
          </thead>
          <tbody id="categorias-tbody"></tbody>
        </table>
      </div>
    </main>
    <main class="container">
      <div class="d-flex">
        <!-- Menus Section -->
        <div class="flex-grow-1">
          <div class="row mt-4">
            <!-- Menú Marcas -->
            <div class="col-md-6">
              <div class="border p-3 card">
                <h5 class="fw-bold">Añadir Marca</h5>
                <div class="mb-3">
                  <label class="fw-bold">Nombre</label>
                  <input type="text" class="form-control" id="nombre-marca" placeholder="Ingrese el nombre" required>
                </div>
                <button class="btn btn-success" id="btn-crear-marca">Crear</button>
                <button class="btn" id="btn-limpiar1-marca">Cancelar</button>
                <h5 class="fw-bold mt-3">Eliminar Marca</h5>
                <div class="mb-3">
                  <label class="fw-bold">Nombre</label>
                  <select class="form-select" id="marcas"></select>
                </div>
                <button class="btn btn-danger" id="btn-eliminar-marca">Eliminar</button>
              </div>
            </div>
            <!-- Menú Categorías -->
            <div class="col-md-6">
              <div class="border p-3 card">
                <h5 class="fw-bold">Añadir Categoría</h5>
                <div class="mb-3">
                  <label class="fw-bold">Nombre</label>
                  <input type="text" class="form-control" id="nombre-categoria" placeholder="Ingrese el nombre" required>
                </div>
                <button class="btn btn-success" id="btn-crear-categoria">Crear</button>
                <button class="btn" id="limpiarCategoria">Cancelar</button>
                <h5 class="fw-bold mt-3">Eliminar Categoría</h5>
                <div class="mb-3">
                  <label class="fw-bold">Nombre</label>
                  <select class="form-select" id="categorias"></select>
                </div>
                <button class="btn btn-danger" id="btn-eliminar-categoria">Eliminar</button>
              </div>
            </div>
          </div>
        </div>
        <!-- Alerts Sidebar -->
        <div id="alerts-sidebar" class="ms-3 card mt-4 p-3">
          <!-- <div class="card-header"> -->
            <h5 class="fw-bold">Notificaciones</h5>
          <!-- </div> -->
          <div id="alerts"></div>
        </div>
      </div>
    </main>
